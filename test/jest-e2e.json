{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@common/(.*)$": "<rootDir>/../src/common/$1",
    "^@auth/(.*)$": "<rootDir>/../src/modules/auth/$1",
    "^@otp/(.*)$": "<rootDir>/../src/modules/otp/$1",
    "^@core/(.*)$": "<rootDir>/../src/core/$1"
  }
}
